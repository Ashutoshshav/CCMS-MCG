@model CCMS.Models.IMEI_Master

@{
    ViewData["Title"] = "Edit Device";
}

<h2 class="mt-16">Edit Device</h2>

<form asp-action="Edit" asp-controller="IMEI_Master" asp-route-id="@Model.UID" method="post">
    <input type="hidden" asp-for="UID" />

    <div class="form-group">
        <label asp-for="IMEI_no"></label>
        <input asp-for="IMEI_no" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phase"></label>
        <input asp-for="Phase" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
